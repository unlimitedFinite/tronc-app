<div class="form-grand-parent">
  <div class="form-parent">
    <div class="devise-form">
      <div class="form-header">
        <h2>Change your password</h2>
      </div>
      <div class="form-content">

        <p>Please enter your new password below</p>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="field" tabindex='1'>
            <i class="fa fa-lock"></i>
            <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password',
              required: 'required' %>
          </div>

          <div class="field" tabindex='2'>
            <i class="fa fa-lock"></i>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm Password', required: 'required' %>
          </div>


          <div class="actions">
            <%= f.submit "Change my password", class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
