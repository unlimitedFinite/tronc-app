  <% if @employee_records.length > 0 %>
  <% @employee_records.each do |er| %>
  <li class="employee-card">
    <%= er.employee.name %> :
    <%= er.tips %>
    <%= link_to "Remove", employee_record_path(er), remote: true, method: 'delete' %>
  </li>
  <% end %>
  <% else %>
  <p>You deleted everyone!</p>
  <% end %>

