<div class="form-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
  <h2>Add Employee</h2>
</div>
<%= simple_form_for @employee_record do |form| %>
  <div class="form-content">

    <% if @employee_record.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@employee_record.errors.count, "error") %> prohibited this @employee_record from being saved:</h2>
        <ul>
          <% @employee_record.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
    <%= form.input_field :employee_id, collection: @employees, class: 'select_week focused'  %>
    </div>

    <%= hidden_field_tag :tronc_record, @tronc.id %>

    <div class="actions">
      <%= form.submit 'Add', remote:true, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
