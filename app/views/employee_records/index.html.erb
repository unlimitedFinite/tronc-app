<p id="notice"><%= notice %></p>

<h1>Employee Records</h1>

<table>
  <thead>
    <tr>
      <th>Week end</th>
      <th>Tips</th>
      <th>Employee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_records.each do |employee_record| %>
      <tr>
        <td><%= employee_record.week_end %></td>
        <td><%= employee_record.tips %></td>
        <td><%= employee_record.employee_id %></td>
        <td><%= link_to 'Show', employee_record %></td>
        <td><%= link_to 'Edit', edit_employee_record_path(employee_record) %></td>
        <td><%= link_to 'Destroy', employee_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

